@{ 
    List<Group> grupos = (List<Group>) ViewData["GRUPOS"];
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Nueva Petición</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Nueva Petición</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form method="post">
            <div class="row">
                <div class="col-12" style="width:80%;margin:auto;">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Nueva Peticion</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Titulo</label>
                                <input type="text" id="inputName" class="form-control" name="titulo">
                            </div>
                            <div class="form-group">
                                <label for="inputDescription">Descripción del Problema</label>
                                <textarea id="inputDescription" class="form-control" rows="4" name="tickettext"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="inputStatus">Grupo</label>
                                <select id="inputStatus" class="form-control custom-select" name="grupo">
                                    <option selected disabled>Elija Grupo Destino</option>
                                    @foreach (Group g in grupos)
                                    {
                                        <option value="@g.idgroup">@g.name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="inputClientCompany">Usuario</label>
                                <input type="text" id="inputClientCompany" class="form-control" readonly value="@Context.User.Identity.Name">
                            </div>
                            <input type="hidden" name="idusuariocreado" value="@Context.User.FindFirst(ClaimTypes.NameIdentifier).Value" />
                        </div>
                        <!-- /.card-body -->
                    </div>

                    <!-- /.card -->
                </div>

            </div>
            <div class="row">
                <div class="col-12">
                    <a href="#" class="btn btn-secondary">Cancelar</a>
                    <input type="submit" value="Crear Peticion" class="btn btn-success float-right">
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>